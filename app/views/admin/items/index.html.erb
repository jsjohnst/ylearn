<h1>Listing items</h1>

<table>
  <tr>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.title %></td>
    <td><%= link_to 'Show', [:admin, item] %></td>
    <td><%= link_to 'Edit', edit_admin_item_path(item) %></td>
    <td><%= link_to 'Destroy', [:admin, item], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

